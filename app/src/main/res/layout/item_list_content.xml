<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_margin="@dimen/material_baseline_grid_1x"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/material_baseline_grid_12x"
        android:layout_height="@dimen/material_baseline_grid_12x"
        android:src="@drawable/img_default_dog_profile"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/name"
        tools:text="Doggo"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"/>

</LinearLayout>